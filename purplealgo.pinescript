indicator('PURPLE ALGO v0.1 (Build 5)', overlay = true)

/////////////////////////////////
// Candle Coloring (HullSuite) //
/////////////////////////////////

//INPUT
src = input(close, title = 'Source')
modeSwitch = 'Hma'
length = 55
lengthMult = 1.0
color1 = input(#673ab7, title = "Up Color")
color2 = input(#f23645, title = "Down Color")

useHtf = false
htf = '240'

switchColor = true
candleCol = true
visualSwitch = true
thicknesSwitch = 1
transpSwitch = 40

//FUNCTIONS
//HMA
HMA(_src, _length) =>
    ta.wma(2 * ta.wma(_src, _length / 2) - ta.wma(_src, _length), math.round(math.sqrt(_length)))
    //EHMA    
EHMA(_src, _length) =>
    ta.ema(2 * ta.ema(_src, _length / 2) - ta.ema(_src, _length), math.round(math.sqrt(_length)))
    //THMA    
THMA(_src, _length) =>
    ta.wma(ta.wma(_src, _length / 3) * 3 - ta.wma(_src, _length / 2) - ta.wma(_src, _length), _length)

//SWITCH
Mode(modeSwitch, src, len) =>
    modeSwitch == 'Hma' ? HMA(src, len) : modeSwitch == 'Ehma' ? EHMA(src, len) : modeSwitch == 'Thma' ? THMA(src, len / 2) : na

//OUT
_hull = Mode(modeSwitch, src, int(length * lengthMult))
HULL = useHtf ? request.security(syminfo.ticker, htf, _hull) : _hull

//COLOR
hullColor = switchColor ? HULL > HULL[2] ? color1 : color2 : color.yellow


///BARCOLOR
barcolor(color = candleCol ? switchColor ? hullColor : na : na)



